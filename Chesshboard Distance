#include <iostream>
using namespace std;

int chessboardDistance(int x1, int y1, int x2, int y2) {
    int dx = abs(x1 - x2);
    int dy = abs(y1 - y2);
    return max(dx, dy);
}


int main() {
    int t;
    cin>>t;
    while(t--){
         int x1, y1, x2, y2;
        cin >> x1 >> y1 >> x2 >> y2;
         int distance = chessboardDistance(x1, y1, x2, y2);
        cout << distance << endl; 

    }
	
	return 0;
}
